{
  "ts-node": {
    "transpileOnly": true,
    "files": true,
  },
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "lib",
    "outDir": "dist",
    "strict": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types", "./src/*.d.ts"],
  },
  "include": [
    "lib/**/*.ts",
  ],
  "exclude": [
    "node_modules", "jest.config.ts", "test/full-name-parser.test.ts", "*.old.ts"
  ],
}